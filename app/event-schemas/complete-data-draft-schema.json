{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "s3Uri": {
      "type": "string",
      "pattern": "^s3://[a-zA-Z0-9_-]+/[a-zA-Z0-9_./-]+"
    },
    "s3UriDirectory": {
      "type": "string",
      "pattern": "^s3://[a-zA-Z0-9_-]+/[a-zA-Z0-9_./-]+/$"
    },
    "tags": {
      "type": "object",
      "properties": {
        "instrumentRunId": {
          "type": "string",
          "examples": ["251003_A00130_0384_AHL7LWDSXF"]
        },
        "basespaceRunId": {
          "type": "number",
          "examples": [1234567890]
        },
        "experimentRunName": {
          "type": "string",
          "examples": ["Name of the run"]
        }
      },
      "required": ["instrumentRunId", "basespaceRunId", "experimentRunName"]
    },
    "inputs": {
      "type": "object",
      "properties": {
        "bsshProjectId": {
          "type": "string"
        },
        "bsshAnalysisId": {
          "type": "string"
        },
        "instrumentRunId": {
          "type": "string"
        }
      },
      "required": ["bsshProjectId", "bsshAnalysisId", "instrumentRunId"]
    },
    "engineParameters": {
      "type": "object",
      "properties": {
        "outputUri": {
          "$ref": "#/$defs/s3UriDirectory"
        }
      },
      "required": ["outputUri"]
    }
  },
  "type": "object",
  "properties": {
    "tags": {
      "$ref": "#/$defs/tags"
    },
    "inputs": {
      "$ref": "#/$defs/inputs"
    },
    "engineParameters": {
      "$ref": "#/$defs/engineParameters"
    }
  },
  "required": ["tags", "inputs", "engineParameters"]
}
